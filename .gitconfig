[user]
[pull]
	rebase = true
	autoStash = true
[color]
	ui = auto
[push]
	default = simple
[commit]
	template = ~/.gitmessage
[alias]
# see https://gist.github.com/johnpolacek/69604a1f6861129ef088 
# also see http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/ for good example/where I got some of these
	br = branch
	cm = commit
	co = checkout
	cob = checkout -b
	dh = diff HEAD^
	dlc = diff --cached
	la = "!git config -l | grep alias | cut -c 7-"	
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	pcpro = push -u cpro-gitlab
	s = status
